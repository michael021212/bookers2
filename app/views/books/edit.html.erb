


<div class="container">
    <div class="col-md-6 col-md-offset-3" >
      <h1>Editing Book</h1>

      <%= form_for(@book) do |f| %>
          <div>
              <% if @book.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                  <ul>
                      <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                  </ul>
                </div>
              <% end %>
          </div>

          <div class="row">
              <h5>Title</h5>
              <div><%= f.text_field :title, class: "col-lg-12"  %></div>
          </div>

          <div class="row">
              <h5>Opinion</h5>
               <div><%= f.text_area :body, class: "col-lg-12"  %></div>
          </div>

          <div class="row">
              <div style="margin-top: 10px; margin-bottom: 55px;"><%= f.submit "Update Book", class: "btn btn-primary col-lg-12" %></div>
          </div>
      <% end %>

      <%= link_to "Show", book_path(@book), class: ""  %>
      <span>|</span>
      <%= link_to "Back", books_path %>

    </div>

</div>