<% if book.favorited_by?(current_user) %>
    <%= link_to book_favorites_path(book.id), method: :delete, remote: :true do %> <!-- remote: :trueでAjaxリクエストを飛ばす -->
        <i class="fas fa-heart"></i>
        <%= book.favorites.count %>
    <% end %>
<% else %>
    <%= link_to book_favorites_path(book.id), method: :post, remote: :true do %> <!-- remote: :trueでAjaxリクエストを飛ばす -->
        <i class="far fa-heart"></i>
        <%= book.favorites.count %>
    <% end %>
<% end %>