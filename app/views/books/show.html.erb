
<div class="container">
<p><%= notice %></p>
    <div class="sidebar col-lg-3">

        <div class="row">
            <h1 class="row">User info</h1>

            <div class="profile-container row">
                <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, class: "img-thumnail pull-left profile-thumb", fallback: "no_image.jpg"%>
            </div>

            <table class="table">
                <tr>
                    <th>name</th>
                    <th class="profile-name"><%= @book.user.name %></th>
                </tr>

                <tr>
                    <th>introduction</th>
                    <th class="profile-introduction"><%= @book.user.introduction %></th>
                </tr>
            </table>

            <div>
            <%= link_to "", edit_user_path(@book.user), class: "glyphicon glyphicon-wrench btn btn-default col-lg-12", style:"color: black" %>
            </div>

        </div>


        <div class="row">
            <%= form_for(@book_new, url: books_path) do |f| %>
                <div>
                    <% if @book_new.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= @book_new.errors.count %>件のエラーが発生しました。</h2>
                        <ul>
                            <% @book_new.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                            <% end %>
                        </ul>
                      </div>
                    <% end %>
                </div>

                <h1 class="">New book</h1>

                <div class="row">
                    <h5>Title</h5>
                    <div><%= f.text_field :title, class: "col-lg-12"  %></div>
                </div>

                <div class="row">
                    <h5>Opinion</h5>
                     <div><%= f.text_area :body, class: "col-lg-12"  %></div>
                </div>

                <div class="row">
                    <div style="margin-top: 10px;"><%= f.submit "Create Book", class: "btn btn-primary col-lg-12" %></div>
                </div>
            <% end %>

        </div>
    </div>

    <div class="main col-lg-9">
        <h1>Book detail</h1>

        <table class="table">
            <tr>
                <td>
                    <%= link_to user_path(@book.user) do %>
                        <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-thumnail", fallback: "no_image.jpg", size:"40x40" %><br>
                        <%= @book.user.name %>
                    <% end %>
                </td>
                <td>
                    <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                    <% end %>
                </td>
                <td>
                    <%= @book.body %>
                </td>

                <% if @book.user == current_user %>
                <td>
                     <%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %>
                </td>
                <td>
                    <%= link_to "Destroy", book_path(@book), class: "btn-sm btn-danger", method: :delete, data: {confirm: '本当に消しますか？'} %>
                </td>
            <% end %>
            </tr>
        </table>
    </div>

</div>
