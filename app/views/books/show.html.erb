<%= notice %>

<h1>User info</h1>

<div class="profile-container">
    
    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <h3>name</h3>
    <h3 class="profile-name"><%= current_user.name %></h3>

    <h3>introduction</h3>
    <h3 class="profile-introduction"><%= current_user.introduction %></h3>
    <div>
    <p><%= link_to "プロフィール編集マーク", edit_user_path(current_user), class: "pull-right" %></p>
    </div>
</div>

<%= form_for(@book_new, url: books_path) do |f| %>
    <% if @book_new.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book_new.errors.count %>件のエラーが発生しました。</h2>
        <ul>
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h1>New book</h1>
    <h3>Title</h3>
    <%= f.text_field :title %>
    <h3>Opinion</h3>
    <%= f.text_area :opinion %>
    <div>
    <p><%= f.submit "Create Book", class: "pull-right" %></p>
    </div>
<% end %>

<h1>Book detail</h1>
<%= link_to user_path(@book.user) do %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"%>
<% end %>

<%= @book.user.name %>

<%= link_to book_path(@book.id) do %>
<%= @book.title %>
<% end %>

<%= @book.opinion %>

<% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path %>
    <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: '本当に消しますか？'} %>
<% end %>
