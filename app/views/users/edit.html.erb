<div class="container">
  <h1>User info</h1>



  <% if @user.errors.any? %>
      <h3>入力した内容にerrorが<%= @user.errors.count %>件あります</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <%= form_for(@user) do |f| %>
    <div class="field">
        <label>Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="field">
        <label>Image</label>
        <%= attachment_image_tag @user, :profile_image,　format: 'jpeg', size: "100x100" %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>

    <div class="field">
        <label>Introduction</label>
        <%= f.text_area :introduction, class: "user-edit-form" %>
    </div>

    <div class="field">
      <%= f.submit "Update User", class:"" %>
    </div>

  <% end %>

</div>