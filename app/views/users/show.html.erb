<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div class="profile-container">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>

<%= form_for(@user) do |f| %>
    <h3>name</h3>
    <h3 class="profile-name"><%= @user.name %></h3>

    <h3>introduction</h3>
    <h3 class="profile-introduction"><%= @user.introduction %></h3>
    <div>
    <p><%= link_to "プロフィール編集マーク", edit_user_path(@user), class: "pull-right" %></p>
    </div>
</div>
<% end %>


